---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ServiceGrid from '../components/ServiceGrid.astro';
import DataTables from '../components/DataTables.astro';
import FAQ from '../components/FAQ.astro';
---

<Layout 
  title="Vehicle Transport Australia | Interstate Car Transport"
  description="Reliable car transport across Australia. Get instant quotes for interstate vehicle shipping, depot-to-depot, and door-to-door service."
>
  <Hero />
  
  <ServiceGrid />
  
  <DataTables />
  
  <FAQ />

  <!-- Pre-Footer CTA -->
  <section class="py-20 bg-gradient-to-br from-brand-orange-500 to-amber-600 text-center relative overflow-hidden">
    <div class="absolute inset-0 bg-white/5 opacity-50 z-0"></div> <!-- Texture overlay -->
    <div class="container mx-auto px-4 relative z-10">
      <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">Ready to move your vehicle?</h2>
      <p class="text-white/90 text-xl max-w-2xl mx-auto mb-10">
        Get your free, no-obligation quote in less than 30 seconds.
      </p>
      <a href="/quote" class="inline-block bg-white text-brand-orange-600 hover:bg-slate-50 font-bold py-4 px-10 rounded-full shadow-xl transition-transform transform hover:scale-105">
        Get Instant Quote
      </a>
    </div>
  </section>
</Layout>
