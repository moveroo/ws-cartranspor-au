---
const transitTimes = [
  { route: 'Sydney ‚Üî Melbourne', time: '2-4 Days', price: '$400 - $650' },
  { route: 'Sydney ‚Üî Brisbane', time: '2-4 Days', price: '$450 - $700' },
  { route: 'Melbourne ‚Üî Brisbane', time: '3-5 Days', price: '$600 - $900' },
  { route: 'East Coast ‚Üî Perth', time: '7-14 Days', price: '$1200 - $1800' },
  { route: 'East Coast ‚Üî Darwin', time: '5-10 Days', price: '$1500 - $2200' },
];

const cities = ['Sydney', 'Melbourne', 'Brisbane', 'Perth', 'Adelaide', 'Canberra', 'Darwin', 'Hobart', 'Gold Coast', 'Newcastle'];
---

<section class="py-16 md:py-24 bg-slate-900 text-white">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
      
      <!-- Transit Times Table -->
      <div>
        <h2 class="text-3xl font-bold mb-6">Estimated Transit Times & Rates</h2>
        <p class="text-slate-400 mb-8">Transparent pricing estimates for standard sedans. Actual quotes may vary based on fuel prices and exact locations.</p>
        
        <div class="bg-slate-800 rounded-2xl overflow-hidden border border-slate-700 shadow-xl">
          <table class="w-full text-left">
            <thead>
              <tr class="bg-slate-950/50 border-b border-slate-700 text-sm font-semibold text-slate-300 uppercase tracking-wider">
                <th class="p-4 pl-6">Route</th>
                <th class="p-4">Est. Time</th>
                <th class="p-4">Est. Price</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-700">
              {transitTimes.map(item => (
                <tr class="hover:bg-slate-700/50 transition-colors text-sm">
                  <td class="p-4 pl-6 font-medium text-white">{item.route}</td>
                  <td class="p-4 text-slate-300">{item.time}</td>
                  <td class="p-4 text-brand-orange-400 font-bold">{item.price}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>

      <!-- Coverage Map/List -->
      <div>
        <h2 class="text-3xl font-bold mb-6">National Coverage</h2>
        <p class="text-slate-400 mb-8">We operate depots in all major cities and provide network coverage to over 95% of the Australian population.</p>
        
        <div class="bg-slate-800 p-8 rounded-2xl border border-slate-700">
          <ul class="grid grid-cols-2 gap-4">
            {cities.map(city => (
              <li class="flex items-center gap-3 text-slate-300">
                <span class="text-brand-orange-500">üìç</span>
                <span class="font-medium hover:text-white transition-colors">{city}</span>
              </li>
            ))}
          </ul>
          
          <div class="mt-8 pt-6 border-t border-slate-700">
             <a href="/locations" class="text-brand-orange-400 hover:text-white font-semibold flex items-center gap-2 transition-colors">
               View all depot locations <span>‚Üí</span>
             </a>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
