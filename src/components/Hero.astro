<section class="relative bg-slate-900 border-b border-slate-800 overflow-hidden">
  <!-- Background Effect -->
  <div class="absolute inset-0 z-0 opacity-20">
    <div class="absolute inset-0 bg-gradient-to-r from-slate-900 via-transparent to-slate-900"></div>
    <div class="grid grid-cols-8 gap-1 opacity-10 h-full">
        {Array.from({ length: 8 }).map(() => <div class="bg-white/10 h-full w-full transform -skew-x-12"></div>)}
    </div>
  </div>

  <div class="container mx-auto px-4 py-16 md:py-24 relative z-10 flex flex-col md:flex-row items-center gap-12">
    
    <!-- Left Content -->
    <div class="flex-1 text-center md:text-left">
      <div class="inline-block bg-brand-orange-500/10 text-white px-4 py-1.5 rounded-full text-sm font-semibold mb-6 border border-brand-orange-500/20">
        ðŸ‡¦ðŸ‡º Australia Wide Service
      </div>
      <h1 class="text-4xl md:text-6xl font-bold text-white leading-tight mb-6">
        Reliable Car Transport <br/>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-orange-400 to-amber-200">Across Australia</span>
      </h1>
      <p class="text-lg text-slate-400 mb-8 max-w-xl mx-auto md:mx-0 leading-relaxed">
        Safe, secure, and affordable vehicle logistics for individuals, fleets, and dealerships. Move your car interstate with confidence.
      </p>
      
      <!-- Trust Badges -->
      <div class="flex flex-wrap justify-center md:justify-start gap-6 text-slate-400 text-sm">
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-orange-500" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
          Fully Insured
        </div>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-orange-500" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
          Door-to-Door
        </div>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-orange-500" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>
          Real Tools Tracking
        </div>
      </div>
    </div>

    <!-- Right Content: Instant Quote Form Card -->
    <div class="w-full max-w-md bg-white rounded-2xl shadow-2xl p-6 md:p-8 relative z-20">
      <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-brand-orange-500 to-amber-500 rounded-t-2xl"></div>
      <h3 class="text-2xl font-bold text-slate-800 mb-2">Get Instant Quote</h3>
      <p class="text-slate-500 text-sm mb-6">Enter your details to see real-time pricing.</p>
      
      <form class="space-y-4" action="#" onsubmit="event.preventDefault(); window.location.href='/quote'">
        <div class="grid grid-cols-2 gap-4">
            <div>
                <label class="block text-xs font-semibold text-slate-500 mb-1 uppercase">Pickup</label>
                <input type="text" placeholder="Postcode or Suburb" class="w-full px-4 py-2 border border-slate-200 rounded-lg focus:ring-2 focus:ring-brand-orange-500 focus:border-brand-orange-500 outline-none text-slate-700 bg-slate-50" />
            </div>
            <div>
                <label class="block text-xs font-semibold text-slate-500 mb-1 uppercase">Dropoff</label>
                <input type="text" placeholder="Postcode or Suburb" class="w-full px-4 py-2 border border-slate-200 rounded-lg focus:ring-2 focus:ring-brand-orange-500 focus:border-brand-orange-500 outline-none text-slate-700 bg-slate-50" />
            </div>
        </div>

        <div>
           <label class="block text-xs font-semibold text-slate-500 mb-1 uppercase">Vehicle Make/Model</label>
           <input type="text" placeholder="e.g. Toyota Camry" class="w-full px-4 py-2 border border-slate-200 rounded-lg focus:ring-2 focus:ring-brand-orange-500 focus:border-brand-orange-500 outline-none text-slate-700 bg-slate-50" />
        </div>

        <button type="submit" class="w-full bg-gradient-to-r from-brand-orange-500 to-brand-orange-600 hover:from-brand-orange-600 hover:to-brand-orange-700 text-white font-bold py-3.5 rounded-lg shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-0.5 mt-2">
          Get Quote Now â†’
        </button>
        
        <p class="text-xs text-center text-slate-400 mt-4">
